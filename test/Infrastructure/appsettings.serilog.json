{
  "ConnectionStrings": {
    "SharedKernelLogDatabase": "Server=.;Database=SharedKernelTests;User ID=test;Password=test;MultipleActiveResultSets=true;Application Name=SharedKernel;"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.MSSqlServer" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "SharedKernelLogDatabase",
          "sinkOptionsSection": {
            "tableName": "Logs",
            "schemaName": "log",
            "autoCreateSqlTable": true,
            "batchPostingLimit": 1000,
            "period": "0.00:00:01"
          },
          "restrictedToMinimumLevel": "Debug"
        }
      }
    ]
  }
}